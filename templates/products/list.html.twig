{% extends 'base.html.twig' %}


{% block body %}
    <h1>Products</h1>
    {% for product in products %}
        <div class="product">
            <h2>{{ product.name }}</h2>
            <p>{{ product.description | nl2br }}</p>
            <p>Price: {{ product.price | format_currency('EUR', {rounding_mode: 'floor', decimal_always_shown:true}, 'fr')  }}</p>
            <a href="{{ path('products_show', {'product': product.id}) }}" class="btn btn-primary">Show</a>
        </div>
    {% endfor %}
{% endblock %}