{% extends 'base.html.twig' %}

{% block body %}
    <h1>My cart</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for cartDetail in cart.cartDetails %}
            <tr>
                <th>{{ cartDetail.product.name }}</th>
                <td>{{ cartDetail.product.price }}€</td>
                <td>{{ cartDetail.quantity }}</td>
                <td>{{ cartDetail.total }}€</td>
                <td>
                    <a href="{{ path('products_show', {'product': cartDetail.product.id}) }}" class="btn btn-primary">Show</a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>


    Total : {{ cart.total }}€



{% endblock %}
